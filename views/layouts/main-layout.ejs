<!-- Deklarasi DOCTYPE HTML5 -->
<!DOCTYPE html>
<!-- Element HTML dengan bahasa Inggris -->
<html lang="en">
  <!-- Head section berisi metadata dan referensi eksternal -->
  <head>
    <!-- Charset UTF-8 untuk mendukung karakter internasional -->
    <meta charset="utf-8" />
    <!-- Meta viewport untuk responsive design pada mobile device -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Title halaman yang akan muncul di tab browser -->
    <title>PAW Antara 2025</title>
    <!-- Link ke Bootstrap CSS dari CDN dengan integrity hash untuk keamanan -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- ...existing code... -->
    <!-- Custom CSS untuk layout sticky footer menggunakan flexbox -->
    <style>
      /* Membuat html dan body menggunakan 100% tinggi viewport */
      html,
      body {
        height: 100%;
      }
      /* Body sebagai flex container dengan direction column */
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Minimum tinggi 100% viewport height */
      }
      /* Main content menggunakan flex: 1 untuk mengisi ruang tersisa */
      main {
        flex: 1;
      }
    </style>
    <!-- ...existing code... -->
  </head>

  <!-- Body section berisi konten halaman -->
  <body>
    <!-- ...existing code... -->
    <!-- Include partial navbar.ejs menggunakan EJS syntax -->
    <%- include('navbar') %>
    <!-- Main content area yang akan diisi oleh halaman individual -->
    <!-- Variable 'body' berisi konten dari halaman yang menggunakan layout ini -->
    <main><%- body %></main>
    <!-- Include partial footer.ejs menggunakan EJS syntax -->
    <%- include('footer') %>
    <!-- ...existing code... -->
    <!-- Bootstrap JavaScript bundle dari CDN dengan integrity hash untuk keamanan -->
    <!-- Bundle includes: Bootstrap JS + Popper.js untuk dropdown, tooltip, popover -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html